<%= form_with(model: item, id: "item_form") do |form|  %>
    <div class="form-floating">
        <%= form.select :packing_style, ['CRATE', 'SKID', 'BARE','CASE'],{}, class: 'form-select' %>
        <%= form.label :packing_style %>
    </div>

    <h1> SIZE </h1>
    <div class="size_group d-flex ">
      <fieldset>
        <legend><%= form.label :length %></legend>
        <%= form.number_field :length, in: 0..1500, step: 1, class: 'item_attribute'%>
        
      </fieldset>

      <fieldset>
        <legend><%= form.label :width %></legend>
        <%= form.number_field :width, in: 0..600, step: 1, class: 'item_attribute' %>
        
      </fieldset>

      <fieldset>
        <legend><%= form.label :height %> </legend>
        <%= form.number_field :height, in: 0..1200, step: 1,class: 'item_attribute' %>
      </fieldset>

      <fieldset>
        <legend><%= form.label "Unit"%></legend>
        <p>cm</p>
      </fieldset>
    </div>

    <h1> GROSS WEIGHT </h1>
    <div class="size_group d-flex">
      <fieldset>
        <legend><%= form.label :weight %> </legend>
        <%= form.number_field :weight, in: 0.0..35.0, step: 0.1, class: 'item_attribute' %>
      </fieldset>
      
      <fieldset>
        <legend><%= form.label "Unit"%></legend>
        <p>ton</p>
      </fieldset>
      
    </div>

    <h1> CENTER OF GRAVITY HEIGHT </h1>
    <div class="size_group d-flex">
      <fieldset>
        <legend><%= form.label :cog_height_type %></legend>
        <%= form.select :cog_height_type, ['MANUAL', 'TBA', 'HALF OF CARGO HEIGHT OR LESS'],{}, class: 'item_attribute' %>
        
      </fieldset>
      
      <fieldset class="cog_height">
        <legend><%= form.label :cog_height %></legend>
          <%= form.number_field :cog_height, in: 0..1200, step: 1, class: 'item_attribute' %>
        
      </fieldset>

      <fieldset class="cog_height_unit">
        <legend><%= form.label "Unit"%></legend>
        <p>cm</p>
      </fieldset>
      
    </div>

    <div class="actions d-flex flex-row-reverse">
      <div class="btn btn-danger ml-3 btn-cancel">
        <%= link_to 'CANCEL', new_container_path %>
      </div>
      <%= form.hidden_field :container_id %>
      <%= form.submit 'SAVE',class: "btn btn-primary "%>
    </div>

<% end %>